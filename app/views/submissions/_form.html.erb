<section class = "submission_form">
  <%= form_for(@submission) do |f| %>
    <div class="field">
      <%= f.hidden_field :student_id, value: current_user.student.id %>
    </div>

    <div class="field">
      <%= f.hidden_field :assignment_id, value: session[:assignment_id] %>
    </div>

    <div class="field">
      <%= f.hidden_field :submitted_at, value: DateTime.now %>
    </div>

    <div class="field">
      <%= f.label :repository %><br>
      <%= f.text_area :repository %>
    </div>

    <div class="field">
      <%= f.label :application %><br>
      <%= f.text_area :application %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</section>
