<div class = "login">
  <%= form_tag sessions_login_path do %>
    <%= text_field_tag :email, nil, placeholder: "Email" %>
    <%= text_field_tag :password, nil, placeholder: "Password" %>
    <%= submit_tag "Login" %>
  <% end %>

  <% if session[:user_id] %>
    <%= link_to 'Logout', sessions_logout_path %>
  <% end %>
</div>
